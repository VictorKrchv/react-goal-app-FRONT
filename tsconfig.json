{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"],
    }
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}